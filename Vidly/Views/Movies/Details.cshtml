@model Vidly.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genero: @Model.Genre.Name</li>
    <li>Fecha de lanzamiento: @Model.ReleaseDate.ToLongDateString()</li>
    <li>Fecha anexada: @Model.DateAdded.ToLongDateString()</li>
    <li>Numero de Stock: @Model.NumberInStock</li>
</ul>
